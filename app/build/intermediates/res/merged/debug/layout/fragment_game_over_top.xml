<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_border"
    tools:context="com.example.itachi.bullsandcows.GameOverTopFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"


        android:padding="5dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Original No"
            android:id="@+id/originalView"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/originalViewNo"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="No of Trys"
            android:id="@+id/trysView"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/trysViewNo"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gaurav&apos;s Game Analysis"
            android:id="@+id/playerNameView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:textColor="#3b1313" />
    </GridLayout>
</FrameLayout>
